# Cline LLM Methodology Environment Configuration

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Project Configuration
PROJECT_NAME=cline-llm-methodology
PROJECT_VERSION=1.0.0
PROJECT_ENVIRONMENT=development

# Documentation Settings
DOCS_OUTPUT_DIR=site
DOCS_THEME=material

# Tool Configuration
BROWSER_RESOLUTION=900x600
SCREENSHOTS_ENABLED=true
CONSOLE_LOGS_ENABLED=true

# Tavily AI Integration
TAVILY_API_KEY=your-api-key-here
TAVILY_SEARCH_DEPTH=comprehensive
TAVILY_INCLUDE_CODE=true

# MCP Tools Configuration
MCP_TOOLS_ENABLED=true
MCP_AUTO_DISCOVERY=true
MCP_CONFIG_PATH=/home/ubuntu/.local/share/code-server/User/globalStorage/rooveterinaryinc.roo-cline/settings/cline_mcp_settings.json

# Testing Configuration
TEST_OUTPUT_DIR=test_output
COVERAGE_REPORT_DIR=coverage_html
PYTEST_ADDOPTS="--verbose --capture=no"

# GitHub Actions Configuration
GITHUB_TOKEN=your-github-token-here
PYPI_TOKEN=your-pypi-token-here

# Documentation Generation
MKDOCS_STRICT=true
MKDOCS_VERBOSE=true

# Cache Settings
CACHE_DIR=.cache
CACHE_TTL=3600

# Security Settings
ALLOW_EXTERNAL_TOOLS=false
VALIDATE_TOOL_INPUTS=true

# Paths Configuration
TEMPLATES_DIR=src/templates
EXAMPLES_DIR=examples
MIGRATIONS_DIR=migrations

# Resource Limits
MAX_MEMORY_MB=512
MAX_PROCESS_TIME_SEC=300
MAX_FILE_SIZE_MB=10

# Feature Flags
ENABLE_EXPERIMENTAL=false
STRICT_MODE=true
DEBUG_TOOLS=false

# Note: Copy this file to .env and update the values accordingly.
# Do not commit the actual .env file to version control.